<main>
    <div class="mx-5 my-3"><h3>注文履歴一覧</h3></div>
    
    <div class="mx-5 mt-4">
        <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払い金額</th>
                <th>注文詳細</th>
            </tr>
        </thead>
        
        <tobody>
            <% @orders.each do |order| %>
            <tr>
                <th><p class="mt-4"><%= order.created_at %></p></th>
                <th>
                    〒<%= order.postal_code %> </br>
                    <%= order.address %> </br>
                    <%= order.name %>
                </th>
                <th>
                    <% order.order_details.each do |order_detail| %>
                        <%= order_detail.item.name %>
                    <% end %>
                </th>
                <th><p class="mt-4"><%= order.total_payment %>円</p></th>
                <th>
                    <p class="text-center">
                    <%= link_to show_orders_path(order) do %>
                     <button type="button" class="btn btn-primary">表示する</button>
                    <% end %>
                    </p>
                </th>
            </tr>
            <% end %>
        </tobody>
        </table>
    </div>
    
</main>