<main>
    <div><h3>注文履歴一覧</h3></div>
    
    <div>
            
        <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払い金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
            </tr>
        </thead>
        
        <tobody>
            <% @order_details.each do |order_detail| %>
            <tr>
                <th><%= order_detail.created_at %></th>
                <th>
                    <%= order_detail.order.postal_code %> </br>
                    <%= order_detail.order.address %> </br>
                    <%= order_detail.order.name %>
                </th>
                <th><%= order_detail.item_id %></th>
                <th><%= order_detail.price %></th>
                <th><%= order_detail.making_status %></th>
                <th><%= link_to "表示する", show_orders_path(order_detail.id) %></th>
            </tr>
            <% end %>
        </tobody>
        </table>
    </div>
    
</main>