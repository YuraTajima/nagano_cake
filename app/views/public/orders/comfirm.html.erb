<main>
    <div>
        <h3>注文情報確認</h3>
    </div>
    
    <div>
        
    <div>
            
        <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        
        <tobody>
            <% @cart_items.each do |cart_item| %>
            <tr>
                <th><%= cart_item.item.name %></th>
                <th><%= (cart_item.item.price * 1.1).floor %></th>
                <th><%= cart_item.amount %></th>
                <th>
                    <%= (cart_item.item.price * 1.1).floor * cart_item.amount %>
                </th>
                <% @sum +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
            </tr>
            <% end %>
        </tobody>
        </table>
    </div>
    
    <div>
        送料 <%= @order.shipping_cost %></br>
        商品合計 <%= @sum %></br>
        請求金額 <%= @total_payment = @order.shipping_cost + @sum %>
    </div>
    
    <div>
        <p><strong>支払方法</strong> <%= @order.payment_method %></p>
        <p>
            <strong>お届け先</strong> 
            <%= @order.postal_code %>
            <%= @order.address %> </br>
            <%= @order.name %>
        </p>
    </div>
    
    <div>
        <%= form_with model: @order, url: orders_path, method: :post do |f| %>
            <%= f.hidden_field :name, value: @order.name %>
            <%= f.hidden_field :address, value: @order.address %>
            <%= f.hidden_field :postal_code, value: @order.postal_code %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
            <%= f.hidden_field :total_payment, value: @total_payment %>
            <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
            <%= f.hidden_field :states, value: @order.states %>
            <%= f.submit '注文を確定する' %>
        <% end %>
    </div>
</main>