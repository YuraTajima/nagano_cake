<main class="mx-5 my-3">
    <h3 class="mx-5 my-3">
        マイページ
    </h3>
    <div class="row">
        <p class="mx-5"><strong>登録情報</strong></p>
        <%= link_to customers_information_edit_path(@customer.id) do %>
        <button type="button" class="btn btn-primary">編集する</button>
        <% end %>
    </div>
    
    <div class="col-8">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <td>氏名</td>
                    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <td>住所 </td>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= @customer.email %></td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div>
        <div class="row">
        <p class="mx-5"><strong>配送先</strong></p>　
        <%= link_to addresses_path do %>
        <button type="button" class="btn btn-primary">一覧を見る</button>
        <% end %>
        </div>
         
        <div class="row">
        <p class="mx-5"><strong>注文履歴</strong></p> 
        <%= link_to orders_path do %>
        <button type="button" class="btn btn-primary">一覧を見る</button>
        <% end %>
        </div>
         　
    </div>
</main>