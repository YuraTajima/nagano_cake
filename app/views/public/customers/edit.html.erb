<main>
    <h3>会員情報編集</h3>
    
    <div>
        <%= form_with model: @customer, url: customers_information_path do |f| %>
        <div>
        <div class="field">
          <span>名前</span>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
    
        <div class="field">
          <span>フリガナ</span>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
    
        <div class="field">
          <span>郵便番号(ハイフンなし)</span>
          <%= f.text_field :postal_code %>
        </div>
    
        <div class="field">
          <span>住所</span>
          <%= f.text_field :address, size: 40  %>
        </div>
    
        <div class="field">
          <span>電話番号(ハイフンなし)</span>
          <%= f.text_field :telephone_number %>
        </div>
        
            
        <div class="field">
          <span>メールアドレス</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    
        <div class="field">
          <%= f.submit "編集内容を保存" %>
          <%= link_to "退会する", customers_unsubscribe_path %>
        </div>
        <% end %>
        </div>
    </div>
</main>