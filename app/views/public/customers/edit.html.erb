<main class="mx-5 my-3">
    <h3 class="mx-5 my-3">会員情報編集</h3>
  
      <div class="mx-5 mt-4">
        <%= form_with model: @customer, url: customers_information_path do |f| %>
        <div class="row">
          <table class="col-10">
            <tbody>
              <tr>
                <td><p class="mt-3">氏名</p></td>
                <td><span class="mt-3"><%= f.text_field :last_name %></span><span class="mt-3 ml-5"><%= f.text_field :first_name %></span></td>
              </tr>
              <tr>
                <td><p class="mt-3">フリガナ</p></td>
                <td><span class="mt-3"><%= f.text_field :last_name_kana %></span><span class="mt-3 ml-5"><%= f.text_field :first_name_kana %></span></td>
              </tr>
              <tr>
                <td><p class="mt-3">郵便番号</p></td>
                <td><p class="mt-3"><%= f.text_field :postal_code %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">住所</p></td>
                <td><p class="mt-3"><%= f.text_field :address, size: 40  %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">電話番号</p></td>
                <td><p class="mt-3"><%= f.text_field :telephone_number %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">メールアドレス</p></td>
                <td><p class="mt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p></td>
              </tr>
              <tr>
                <td colspan="1"></td>
                <td><span class="mt-3 mr-5"><%= f.submit "編集内容を保存" %></span>
                <%= link_to customers_unsubscribe_path do %>
                <button type="button" class="btn btn-danger">退会する</button>
                <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <% end %>
    </div>
</main>
