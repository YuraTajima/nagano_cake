<main class="mx-5 my-3">
  
  <div class="mx-5">
  <div class="mx-5 mt-3">
    <h3>新規会員登録</h3>
  </div>
  
  <div>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
        <div>
          <table>
            <tbody>
              <tr>
                <td><p class="mt-3">名前</p></td>
                <td><p class="mt-3">(姓)</p></td>
                <td><span class="mt-3"><%= f.text_field :last_name %></span></td>
                <td><p class="mt-3">(名)</p></td>
                <td><span class="mt-3 ml-5"><%= f.text_field :first_name %></span></td>
              </tr>
              <tr>
                <td><p class="mt-3">フリガナ</p></td>
                <td><p class="mt-3">(セイ)</p></td>
                <td><span class="mt-3"><%= f.text_field :last_name_kana %></span></td>
                <td><p class="mt-3">(メイ)</p></td>
                <td><span class="mt-3 ml-5"><%= f.text_field :first_name_kana %></span></td>
              </tr>
              <tr>
                <td><p class="mt-3">メールアドレス</p></td>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">郵便番号(ハイフンなし)</p></td>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.text_field :postal_code %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">住所</p></td>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.text_field :address, size: 40  %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">電話番号(ハイフンなし)</p></td>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.text_field :telephone_number %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">パスワード(6文字以上)</p></td>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.password_field :password, autocomplete: "new-password" %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">パスワード(確認用)</p></td>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></p></td>
              </tr>
              <tr>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.submit "新規登録" %></p></td>
              </tr>
            </tbody>
          </table>
        </div>
    <% end %>
  </div>
  <div class="mx-5 mt-3">
    <h3>既に登録済みの方</h3>
    <p class="mx-5 mt-3"><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>
  </div>
  </div>
</main>

