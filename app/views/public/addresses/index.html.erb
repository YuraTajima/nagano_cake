<main class="mx-5 my-3">
    <h3 class="mx-5 my-3">配送先登録/一覧</h3>
    <div class="mx-5 my-3">
        <table>
            <tbody>
                <%= form_with model: @address, url: addresses_path do |f| %>
                <tr>
                    <td>郵便番号(ハイフンなし)</td>
                    <td><%= f.text_field :postal_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= f.text_field :address, size: 40  %></td>
                </tr>
                <tr>
                    <td>宛名</td>
                    <td><%= f.text_field :name  %></td>
                    <td><%= f.submit "新規登録" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    
    <div class="my-5">
        <table class="col-7 table table-hover table-bordered">
        <thead>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th colspan="1"></th>
            </tr>
        </thead>
        
        <tobody>
            <% @addresses.each do |address| %>
            <tr>
                <th><%= address.postal_code %></th>
                <th><%= address.address %></th>
                <th><%= address.name %></th>
                <th>
                    <p class="text-center">
                    <span class="mr-2"><%= link_to '編集する', edit_addresses_path(address.id) %></span>  
                    <span><%= link_to "削除", destroy_addresses_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？"  %></span>
                    </p>
                </th>
                
            </tr>
            <% end %>
        </tobody>
        </table>
    </div>
</main>
