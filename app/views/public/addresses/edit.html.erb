<main class="mx-5 my-3">
    <div class="mx-5 my-3">
        <h3>配送先編集</h3>
    </div>
    
     <div class="mx-5 my-3">
        <table>
            <tbody>
            <%= form_with model: @address, url: update_addresses_path, method: :patch do |f| %>
                <tr>
                    <td>郵便番号(ハイフンなし) </td>
                    <td><p class="ml-5"><%= f.text_field :postal_code %></p></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><p class="ml-5"><%= f.text_field :address, size: 40  %></p></td>
                </tr>
                <tr>
                    <td>宛名</td>
                    <td><p class="ml-5"><%= f.text_field :name  %></p></td>
                    <td><%= f.submit '変更内容を保存' %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    
</main>