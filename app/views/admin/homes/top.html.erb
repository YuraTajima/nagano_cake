<main class="mx-5 my-3">
    <div class="mx-5">
        <h3>注文履歴一覧</h3>
    
    <div class="mt-3">
        <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
            </tr>
        </thead>
        
        <tobody>
            <% @orders.each do |order| %>
            <tr>
                <th>
                    <%= link_to admin_order_path(order.id) do %>
                    <%= order.created_at%>
                    <% end %>
                </th>
                <th><%= order.name %></th>
                <th>
                    <%= order.order_details.sum(:amount) %>
                </th>
            </tr>
            <% end %>
        </tobody>
        </table>
        <div class="pagination justify-content-center"><%= paginate @orders %></div>
    </div>
    </div>
</main>