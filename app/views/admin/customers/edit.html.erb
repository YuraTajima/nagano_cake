<main>
    <div>
        <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
        
        <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div>
        <div class="field">
          <span>名前</span>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
    
        <div class="field">
          <span>フリガナ</span>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
    
        <div class="field">
          <span>メールアドレス</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    
        <div class="field">
          <span>郵便番号(ハイフンなし)</span>
          <%= f.text_field :postal_code %>
        </div>
    
        <div class="field">
          <span>住所</span>
          <%= f.text_field :address, size: 40  %>
        </div>
    
        <div class="field">
          <span>電話番号(ハイフンなし)</span>
          <%= f.text_field :telephone_number %>
        </div>
        
        <div class="field">
          <span>会員ステータス</span>
          <%= f.radio_button :is_deleted, "sale" %>
          <%= f.label :is_deleted, "有効" %>

          <%= f.radio_button :is_deleted, "stop" %>
          <%= f.label :is_deleted, "退会" %>
        </div>
    
        <div class="field">
          <%= f.submit "編集を保存" %>
        </div>
        <% end %>
        </div>
    </div>
</main>