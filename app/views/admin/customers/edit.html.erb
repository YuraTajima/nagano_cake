<main>
    <div>
        <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
        <div class="field">
          <span>名前</span>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
    
        <div class="field">
          <span>フリガナ</span>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
    
        <div class="field">
          <span>メールアドレス</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    
        <div class="field">
          <span>郵便番号(ハイフンなし)</span>
          <%= f.text_field :postal_code %>
        </div>
    
        <div class="field">
          <span>住所</span>
          <%= f.text_field :address, size: 40  %>
        </div>
    
        <div class="field">
          <span>電話番号(ハイフンなし)</span>
          <%= f.text_field :telephone_number %>
        </div>
    
        <div class="field">
          <span>パスワード(6文字以上)</span>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
    
        <div class="field">
          <span>パスワード(確認用)</span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
    
        <div class="field">
          <%= f.submit "新規登録" %>
        </div>
    </div>
</main>