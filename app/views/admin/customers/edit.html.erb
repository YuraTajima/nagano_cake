<main class="mx-5 my-3">
    <div class="mx-5">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    </div>
    
    <div class="mx-5 mt-4">
        <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div class="row">
          <table class="col-10">
            <tbody>
              <tr>
                <td>会員ID</td>
                <td><% customer.id %></td>
              </tr>
              <tr>
                <td><p class="mt-3">名前</p></td>
                <td><span class="mt-3"><%= f.text_field :last_name %></span><span class="mt-3 ml-5"><%= f.text_field :first_name %></span></td>
              </tr>
              <tr>
                <td><p class="mt-3">フリガナ</p></td>
                <td><span class="mt-3"><%= f.text_field :last_name_kana %></span><span class="mt-3 ml-5"><%= f.text_field :first_name_kana %></span></td>
              </tr>
                <td><p class="mt-3">郵便番号(ハイフンなし)</p></td>
                <td><p class="mt-3"><%= f.text_field :postal_code %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">住所</p></td>
                <td><p class="mt-3"><%= f.text_field :address, size: 40  %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">電話番号(ハイフンなし)</p></td>
                <td><p class="mt-3"><%= f.text_field :telephone_number %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">メールアドレス</p></td>
                <td><p class="mt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p></td>
              </tr>
              <tr>
                <td><p class="mt-3">会員ステータス</p></td>
                <td><p class="mt-3">
                  <%= f.radio_button :is_deleted, "sale" %>
                  <%= f.label :is_deleted, "有効" %>
                  
                  <%= f.radio_button :is_deleted, "stop" %>
                  <%= f.label :is_deleted, "退会" %>
                </p></td>
              </tr>
              <tr>
                <td colspan="1"></td>
                <td><p class="mt-3"><%= f.submit "変更を保存" %></p></td>
              </tr>
            </tbody>
          </table>
        </div>
        <% end %>
    </div>
</main>