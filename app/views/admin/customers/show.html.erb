<main class="mx-5">
    <div class="mx-5">
        <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
        <div class="row mt-4">
            <table class="col-6">
                <tbody>
                    <tr>
                        <td><p class="mt-3">会員ID</p></td>
                        <td><p class="mt-3"><%= @customer.id %></p></td>
                    </tr>
                    <tr>
                        <td><p class="mt-3">氏名</p></td>
                        <td><p class="mt-3"><%= @customer.last_name %><%= @customer.first_name %> </p></td>
                    </tr>
                    <tr>
                        <td><p class="mt-3">フリガナ</p> </td>
                        <td><p class="mt-3"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></p></td>
                    </tr>
                    <tr>
                        <td><p class="mt-3">郵便番号</p></td>
                        <td><p class="mt-3"><%= @customer.postal_code %></p></td>
                    </tr>
                    <tr>
                        <td><p class="mt-3">住所</p></td>
                        <td><p class="mt-3"><%= @customer.address %></p></td>
                    </tr>
                    <tr>
                        <td><p class="mt-3">電話番号</p> </td>
                        <td><p class="mt-3"><%= @customer.telephone_number %></p></td>
                    </tr>
                    <tr>
                        <td><p class="mt-3">メールアドレス</p></td>
                        <td><p class="mt-3"><%= @customer.email %></p></td>
                    </tr>
                    <tr>
                        <td><p class="mt-3">会員ステータス</p> </td>
                        <td>
                            <% if @customer.is_deleted %>
                                退会
                            <% else %>
                                有効
                            <% end %>
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="1"></td>
                        <td>
                            <span class="mr-1">
                                <%= link_to edit_admin_customer_path(@customer.id) do %>
                                <button type="button" class="btn btn-success">編集する</button>
                                <% end %>
                            </span>
                            <span class="ml-5">
                                <%= link_to admin_root_path do %>
                                <button type="button" class="btn btn-primary">注文履歴一覧を見る</button>
                                <% end %>
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        </div>
    </div>
</main>