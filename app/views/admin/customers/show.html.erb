<main class="mx-5">
        <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
        <div class="row">
        <div class="col-6">
            <p class="mt-3">会員ID</p>
            <p class="mt-3">氏名</p>
            <p class="mt-3">フリガナ</p> 
            <p class="mt-3">郵便番号</p> 
            <p class="mt-3">住所</p> 
            <p class="mt-3">電話番号</p> 
            <p class="mt-3">メールアドレス</p> 
            <p class="mt-3">会員ステータス</p> 
        </div>

        <div class="col-6">
            <p class="mt-3"><%= @customer.id %></p>
            <p class="mt-3"><%= @customer.last_name %><%= @customer.first_name %> </p>
            <p class="mt-3"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></p>
            <p class="mt-3"><%= @customer.postal_code %></p>
            <p class="mt-3"><%= @customer.address %></p>
            <p class="mt-3"><%= @customer.telephone_number %></p>
            <p class="mt-3"><%= @customer.email %></p>
            <p class="mt-3">
                <% if @customer.is_deleted %>
                    退会
                <% else %>
                    有効
                <% end %>
            </p>
            <div class="row">
            <div class="col-3">
            <%= link_to '編集する', edit_admin_customer_path(@customer.id) %>
            </div>
            <div class="col-3 ">
            <%= link_to '注文履歴一覧を見る', admin_root_path %>
            </div>
        </div>
    </div>
</main>