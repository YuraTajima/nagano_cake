<main class="mx-5 my-3">
    <div class="mx-5"><h3>会員一覧</h3>
    
    <div class="mx-5 mt-4">
        <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
        
        <tobody>
            <% @customers.each do |customer| %>
            <tr>
                <th><%= customer.id %></th>
                <th>
                    <%= link_to admin_customer_path(customer.id) do %>
                    <%= customer.last_name %><%= customer.first_name %>
                    <% end %>
                </th>
                <th><%= customer.email %></th>
                <th><% if customer.is_deleted %>
                        退会
                    <% else %>
                        有効
                    <% end %>
                </th>
                
            </tr>
            <% end %>
        </tobody>
        </table>
        <div><%= paginate @customers %></div>
    </div>
    </div>
</main>