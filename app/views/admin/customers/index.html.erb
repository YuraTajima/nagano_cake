<main>
    <div><h3>会員一覧</h3></div>
    
    <div>
        <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
        
        <tobody>
            <% @customers.each do |customer| %>
            <tr>
                <th><%= customer.id %></th>
                <th><%= customer.last_name %><%= customer.first_name %></th>
                <th><%= customer.email %></th>
                <th><%= customer.is_deleted %></th>
            </tr>
            <% end %>
        </tobody>
        </table>
    </div>
</main>