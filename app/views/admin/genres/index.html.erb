<main class="mx-5">
    
    <div class="mx-3">
        <h3>ジャンル一覧・追加</h3>
    </div>
    
    <div class="row">
        ジャンル名
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
        <% end %>
    </div>
    
    <div>
        <table class="table table-hover table-inverse col-3">
        <thead>
            <tr>
                <th>ジャンル</th>
                <th colspan="1"></th>
            </tr>
        </thead>
        
        <tobody>
            <% @genres.each do |genre| %>
            <tr>
                <th><%= genre.name %></th>
                <th><%= link_to '編集する', edit_admin_genre_path(genre.id) %></th>
            </tr>
            <% end %>
        </tobody>
        </table>
    </div>
</main>