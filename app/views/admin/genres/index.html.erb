<main class="mx-5 my-3">
    
    <div class="mx-5">
        <h3>ジャンル一覧・追加</h3>
    </div>
    
    <div class="mx-3 mt-5">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="row">
        <div class="col-1">ジャンル名</div>
        <div class="col-2"><%= f.text_field :name %></div>
        <div class="col-1"><%= f.submit '新規登録' %></div>
        </div>
        <% end %>
    </div>
    
    <div class="mt-5">
        <table class="table table-hover table-inverse col-3">
        <thead>
            <tr>
                <th><div class="ml-5">ジャンル</div></th>
                <th colspan="1"></th>
            </tr>
        </thead>
        
        <tobody>
            <% @genres.each do |genre| %>
            <tr>
                <th><%= genre.name %></th>
                <th>
                    <div class="ml-5">
                    <%= link_to edit_admin_genre_path(genre.id) do %>
                        <button type="button" class="btn btn-success">編集する</button>
                    <% end %>
                    </div>
                </th>
            </tr>
            <% end %>
        </tobody>
        </table>
    </div>
</main>