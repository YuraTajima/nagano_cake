<main>
    <h2>商品新規登録</h2>
    <div>
        <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
        <h4>商品画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        
        <h4>商品名</h4>
        <%= f.text_field :name %>
	
        <h4>商品説明</h4>
        <%= f.text_area :introduction %>
        
        <h4>ジャンル</h4>
        <!--%= f.select :genre_id %-->
        
        <h4>税抜価格</h4>
        <%= f.number_field :price %>円
        
        <h4>販売ステータス</h4>
        <span><%= f.check_box :is_active %>販売中</span>
        <span><%= f.check_box :is_active %>販売停止中</span>
	
        <h4><%= f.submit '新規登録' %></h4>
        <% end %>
    </div>
</main>