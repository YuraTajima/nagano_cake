<main class="mx-5">
    
    <h2>商品編集</h2>
    
     <div class="mx-5">
        <%= form_with model: @item, url: admin_item_path do |f| %>

        <p class="mt-3"><strog>商品画像</strog></p>
        <%= f.file_field :image, accept: "image/*" %>
        
        <p class="mt-3"><strog>商品名</strog></p>
        <%= f.text_field :name %>
	
        <p class="mt-3"><strog>商品説明</strog></p>
        <%= f.text_area :introduction %>
        
        <p class="mt-3"><strog>ジャンル</strog></p>
        <%= f.select :genre_id, [['ケーキ',1], ['プリン',2], ['焼き菓子',3],['キャンディ',4]] %>

        <p class="mt-3"><strog>税抜価格</strog></p>
        <%= f.text_field :price %>円
        
        <p class="mt-3"><strog>販売ステータス</strog></p>
        <%= f.radio_button :is_active, "sale" %>
        <%= f.label :is_active, "販売中" %>

        <%= f.radio_button :is_active, "stop" %>
        <%= f.label :is_active, "販売停止中" %>
        
        <h3 class ="mx-3 mt-3"><%= f.submit '変更を保存' %></h3>
        <% end %>
    </div>
</main>