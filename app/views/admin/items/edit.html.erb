<main class="mx-5">
    
    <div class="mx-5">
    <h3>商品編集</h3>
    </div>

    <div class="mx-auto" style="width: 800px;">
    <div class="row">
        <%= form_with model: @item, url: admin_item_path do |f| %>
    <table class>
    <div class="mx-5">
        <tobody>
            <tr>
                <td><p class="mt-3">商品画像</p></td>
                <td><p class="mt-3"><%= f.file_field :image, accept: "image/*" %></p></td>
            </tr>
            <tr>
                <td><p class="mt-3">商品名</p></td>
                <td><p class="mt-3"><%= f.text_field :name %></p></td>
            </tr>
            <tr>
                <td><p class="mt-3">商品説明</p></td>
                <td><p class="mt-3"><%= f.text_area :introduction %></p></td>
            </tr>
            <tr>
                <td><p class="mt-3">ジャンル</p></td>
                <td><p class="mt-3"><%= f.select :genre_id, [['ケーキ',1], ['プリン',2], ['焼き菓子',3],['キャンディ',4]] %></p></td>
            </tr>
            <tr>
                <td><p class="mt-3">税抜価格</p></td>
                <td><p class="mt-3"><%= f.text_field :price %>円</p></td>
            </tr>
            <tr>
                <td><p class="mt-3">販売ステータス</p></td>
                <td>
                    <p class="mt-3">
                    <%= f.radio_button :is_active, "sale" %>
                    <%= f.label :is_active, "販売中" %>
                    <%= f.radio_button :is_active, "stop" %>
                    <%= f.label :is_active, "販売停止中" %>
                    </p>
                </td>
            </tr>
        </tobody>
    </div>
    </table>
    <div class="text-center"><%= f.submit '変更を保存' %></div>
        <% end %>
    </div>
    </div>
</main>