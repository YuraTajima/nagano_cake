

<main class="mx-5">
    
    <div class="mx-5">
    <h3>商品一覧</h3>
    </div>
    
    <div class="text-right mx-5 mb-3">
    <%= link_to new_admin_item_path do %>
    <button type="button" class="btn btn-light rounded-circle p-0 shadow" style="width:2rem;height:2rem;">＋</button>
    <% end %>
    </div>
    
    <div>
        <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </tr>
        </thead>
        
        <tobody>
            <% @items.each do |item| %>
            <tr>
                <th><%= item.id %></th>
                <th>
                    <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                    <% end %>
                </th>
                <th><%= item.price %></th>
                <th>
                    <% if item.genre_id == 1 %>
                        ケーキ
                    <% elsif item.genre_id == 2 %>
                        プリン
                    <% elsif item.genre_id == 3 %>
                        焼き菓子
                    <% else item.genre_id == 4 %>
                        キャンディ
                    <% end %>
                </th>
                <th><% if item.is_active %>
                        販売中
                    <% else %>
                        販売停止中
                    <% end %>
                </th>
            </tr>
            <% end %>
        </tobody>
        </table>
        <div class="mx-auto"><%= paginate @items %></div>
    </div>
</main>