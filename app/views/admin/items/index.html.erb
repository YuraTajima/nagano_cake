

<main>
    <h2>商品一覧</h2>
    <%= link_to "+", new_admin_item_path %>
    <div>
        <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </tr>
        </thead>
        
        <tobody>
            <% @items.each do |item| %>
            <tr>
                <th><%= item.id %></th>
                <th>
                    <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                    <% end %>
                </th>
                <th><%= item.price %></th>
                <th><%= item.genre_id %></th>
                <th><% if item.is_active %>
                        販売中
                    <% else %>
                        販売停止中
                    <% end %>
                </th>
            </tr>
            <% end %>
        </tobody>
        </table>
        <div><%= paginate @items %></div>
    </div>
</main>