<main class="mx-5">
    
    <div>
        <h3>商品詳細</h>
    </div>
    
    <div class="row">
    <div class="center-blok col-4">
        <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "300x300" %>
        <% else %>
            <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
    </div>
    
    <div class="mt-5 col-6">
        
        <p class="mt-3">商品名 <%= @item.name %></p> 
        <p class="mt-3">商品説明 <%= @item.introduction %></p>
        <p class="mt-3">ジャンル <%= @item.genre_id %></p>
        <p class="mt-3">税込価格 <%= @item.price %></p>
        <p class="mt-3">販売ステータス
            <% if @item.is_active %>
                販売中
            <% else %>
                販売停止中
            <% end %>
        </p>
    <div class="mt-5 col-6"><%= link_to '編集する', edit_admin_item_path(@item.id) %></div>
    </div>
    </div>
</main>