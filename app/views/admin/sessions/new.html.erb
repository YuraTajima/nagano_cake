<main class="mx-5 my-3">
  
  <div class="mx-5">
  <h3>管理者ログイン</h3>
  </div>
  <div class="mx-auto" style="width: 500px;">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="row">
      <table class="col-10">
        <tbody>
          <tr>
            <td><p class="mt-3">メールアドレス</p></td>
            <td><p class="mt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p></td>
          </tr>
          <tr>
            <td><p class="mt-3">パスワード</p></td>
            <td><p class="mt-3"><%= f.password_field :password, autocomplete: "current-password" %></p></td>
          </tr>
          <tr>
            <td colspan="1"></td>
            <td><p class="mt-3"><%= f.submit "ログイン" %></p></td>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
</main>
