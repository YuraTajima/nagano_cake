<main>
  <div>
  <h3>管理者ログイン</h3>

  <div class="mx-auto">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="field">
        <span>メールアドレス</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <span>パスワード</span>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
  
  </div>
</main>